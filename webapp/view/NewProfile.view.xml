<mvc:View xmlns:core="sap.ui.core" controllerName="sap.btp.details.controller.NewProfile"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.suite.ui.commons"
    xmlns:v="sap.viz.ui5.controls"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    xmlns:u="sap.uxap"
    xmlns="sap.m">
    <u:ObjectPageLayout isChildPage="true">
        <u:headerTitle>
            <u:ObjectPageDynamicHeaderTitle >
                <u:expandedHeading>
                    <Title text="Northwind Order Details" />
                </u:expandedHeading>
                <u:snappedHeading>
                    <FlexBox fitContainer="true" alignItems="Center">
                        <Title text="Northwind Order Details" />
                    </FlexBox>
                </u:snappedHeading>
                <u:expandedContent>
                    <Text text="Profile Creation"/>
                </u:expandedContent>
                <u:snappedContent>
                    <Text text="Profile Creation"/>
                </u:snappedContent>
                <u:breadcrumbs>
                    <Breadcrumbs separatorStyle="GreaterThan">
                        <links>
                            <Link text="Home" press="onNavBack" />
                            <Link text="New Profile" enabled="false" />
                        </links>
                    </Breadcrumbs>
                </u:breadcrumbs>
                <u:actions>
                    <Button text="Save" type="Accept" icon="sap-icon://save" />
                    <Button text="Cancel" type="Reject" press="onNavBack" />
                </u:actions>
            </u:ObjectPageDynamicHeaderTitle>
        </u:headerTitle>
        <u:sections>
            <u:ObjectPageSection title="Create New Profile">
                <u:ObjectPageSubSection >
                    <Toolbar style="Clear" design="Transparent">
                        <Input value="{info>/name}">
                            <layoutData>
                                <OverflowToolbarLayoutData shrinkable="false" minWidth = "5%" maxWidth="20%"/>
                            </layoutData>
                        </Input>
                        <ToolbarSeparator />
                        <Input value="{info>/description}">
                            <layoutData>
                                <OverflowToolbarLayoutData shrinkable="false" minWidth = "5%" maxWidth="20%"/>
                            </layoutData>
                        </Input>
                        <ToolbarSpacer />
                        <ToolbarSpacer />
                        <Label text="SellOut CEDI: " design="Bold" />
                        <StepInput min="1" max="99" value="2" width="1%" change="changeCEDI" name="CEDI" id="CEDI" textAlign="Center"/>
                        <ToolbarSpacer />
                        <Label text="SellOut POS: " design="Bold" />
                        <StepInput min="1" max="99" value="2" width="1%" change="changePOS" name="POS" id="POS" textAlign="Center"/>
                        <ToolbarSpacer />
                        <Label text="Days" design="Bold" id=""/>
                        <Input value="" id="daysTotal" editable="false" width="3%" />
                    </Toolbar>
                </u:ObjectPageSubSection>
                <u:ObjectPageSubSection visible="false" id="errorMessage">
                    <MessageStrip text="Error! Percentage should always be 100." type="Error" showIcon="true" showCloseButton="false" class="sapUiTinyMargin" />
                </u:ObjectPageSubSection>
                <u:ObjectPageSubSection>
                    <ScrollContainer vertical="false" horizontal="true">
                        <Table id="daysTable">
                        </Table>
                    </ScrollContainer>
                </u:ObjectPageSubSection>
                <u:ObjectPageSubSection >
                            <c:ChartContainer id="chartContainer" showZoom="false" showPersonalization="false" autoAdjustHeight="true" title="Chart">
                                <c:content>
                                    <c:ChartContainerContent icon="sap-icon://line-chart" title="Line Chart">
                                        <c:content>
                                            <v:VizFrame >
                                            </v:VizFrame>
                                        </c:content>
                                    </c:ChartContainerContent>
                                </c:content>
                            </c:ChartContainer>
                </u:ObjectPageSubSection>
            </u:ObjectPageSection>
        </u:sections>
    </u:ObjectPageLayout>
</mvc:View>