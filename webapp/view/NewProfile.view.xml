<mvc:View xmlns:core="sap.ui.core" controllerName="sap.btp.details.controller.NewProfile"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    xmlns:u="sap.uxap"
    xmlns="sap.m">
    <u:ObjectPageLayout isChildPage="true">
        <u:headerTitle>
            <u:ObjectPageDynamicHeaderTitle >
                <u:expandedHeading>
                    <Title text="Northwind Order Details" />
                </u:expandedHeading>
                <u:snappedHeading>
                    <FlexBox fitContainer="true" alignItems="Center">
                        <Title text="Northwind Order Details" />
                    </FlexBox>
                </u:snappedHeading>
                <u:expandedContent>
                    <Text text="Profile Creation"/>
                </u:expandedContent>
                <u:snappedContent>
                    <Text text="Profile Creation"/>
                </u:snappedContent>
                <u:breadcrumbs>
                    <Breadcrumbs separatorStyle="GreaterThan">
                        <links>
                            <Link text="Home" press="onNavBack" />
                            <Link text="New Profile" enabled="false" />
                        </links>
                    </Breadcrumbs>
                </u:breadcrumbs>
                <u:actions>
                    <Button text="Save" type="Accept" icon="sap-icon://save" />
                    <Button text="Cancel" type="Reject" press="onNavBack" />
                </u:actions>
            </u:ObjectPageDynamicHeaderTitle>
        </u:headerTitle>
        <u:sections>
            <u:ObjectPageSection title="Create New Profile">
                <u:ObjectPageSubSection >
                    <Toolbar style="Clear">
                        <Input value="{info>/name}" >
                            <layoutData>
                                <OverflowToolbarLayoutData shrinkable="false" minWidth = "5%" maxWidth="20%"/>
                            </layoutData>
                        </Input>
                        <ToolbarSeparator />
                        <Input value="{info>/description}">
                            <layoutData>
                                <OverflowToolbarLayoutData shrinkable="false" minWidth = "5%" maxWidth="20%"/>
                            </layoutData>
                        </Input>
                        <ToolbarSpacer />
                        <Label text="CEDI: " design="Bold" />
                        <Button icon="sap-icon://sys-add" type="Accept" press="addCEDI" />
                        <Input value="8" type="Number" width="3%" id="CEDI" textAlign="Center" editable="false" />
                        <Button icon="sap-icon://sys-minus" type="Reject" press="removeCEDI" />
                        <Label text="POS: " design="Bold" />
                        <Button icon="sap-icon://sys-add" type="Accept" press="addPOS" />
                        <Input value="7" type="Number" width="3%" id="POS" textAlign="Center" editable="false" />
                        <Button icon="sap-icon://sys-minus" type="Reject" press="removePOS" />
                    </Toolbar>
                </u:ObjectPageSubSection>
                <u:ObjectPageSubSection>
                    <ScrollContainer vertical="false" horizontal="true">
                        <content>
                            <Table id="daysTable">
                            </Table>
                        </content>
                    </ScrollContainer>
                </u:ObjectPageSubSection>
            </u:ObjectPageSection>
        </u:sections>
    </u:ObjectPageLayout>
</mvc:View>