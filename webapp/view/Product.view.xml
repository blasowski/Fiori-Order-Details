<mvc:View controllerName="sap.btp.details.controller.Product"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.uxap"
	xmlns="sap.m">
	<Page title="{products>/Product/ProductName}" class="sapUiContentPadding" showNavButton="true" navButtonPress="onNavBack" showHeader="true" showFooter="true" id="productPage">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button id="edit" text="Edit" enabled="true" press="onEditPress" icon="sap-icon://edit" />
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>