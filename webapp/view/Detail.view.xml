<mvc:View xmlns:core="sap.ui.core" controllerName="sap.btp.details.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.uxap"
    xmlns="sap.m">
    <Page class="sapUiContentPadding" showNavButton="false" showHeader="false" showFooter="false">

        <u:ObjectPageDynamicHeaderContent pinnable="true">
            <u:ObjectPageDynamicHeaderTitle >
                <u:heading>
                    <Title text="Order N.{mTitle>/OrderID}"></Title>
                </u:heading>
                <u:breadcrumbs>
                    <Breadcrumbs >
                        <Link text="Home" press="onNavBack"></Link>
                        <Link text="Order N.{mTitle>/OrderID}"></Link>
                    </Breadcrumbs>
                </u:breadcrumbs>
                <u:expandedContent>
                    <l:HorizontalLayout class="sapUiContentPadding" >
                        <Input value="{mTitle>/OrderID}"></Input>
                        <Input value="{mTitle>/CustomerID}"></Input>
                        <Input value="{mTitle>/OrderDate}"></Input>
                    </l:HorizontalLayout>
                </u:expandedContent>
                <u:snappedContent>
                    <Text text="{mTitle>/OrderID}"></Text>
                    <Text text="{mTitle>/CustomerID}"></Text>
                </u:snappedContent>

            </u:ObjectPageDynamicHeaderTitle>
        </u:ObjectPageDynamicHeaderContent>
        <l:HorizontalLayout class="sapUiContentPadding">
            <Table items="{path : 'mDetails>/'}" alternateRowColors="true">
                <columns>
                    <Column minScreenWidth="Tablet">
                        <Text text="Product Name" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Inactive" press="onPress">
                        <cells>
                            <ObjectIdentifier text="{mDetails>Product/ProductName}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </l:HorizontalLayout>
    </Page>
</mvc:View>