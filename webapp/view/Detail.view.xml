<mvc:View xmlns:core="sap.ui.core" controllerName="sap.btp.details.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:u="sap.uxap"
    xmlns="sap.m">
    <Page class="sapUiContentPadding" showNavButton="true" showHeader="true" showFooter="false" id="detailPage" navButtonPress="onNavBack" title="Northwind Order Details">

        <u:ObjectPageDynamicHeaderContent pinnable="false">
            <u:ObjectPageDynamicHeaderTitle >
                <u:heading>
                    <Title text="Order N.{orders>/OrderID}"></Title>
                </u:heading>
                <u:breadcrumbs>
                    <Breadcrumbs >
                        <Link text="Home" press="onNavBack"></Link>
                        <Link text="Order N.{orders>/OrderID}"></Link>
                    </Breadcrumbs>
                </u:breadcrumbs>
                <u:expandedContent>
                    <HBox justifyContent="Center"> 
                    <items>
                    <Input value="{Price>/0/0}"></Input>
                    <Input value="{Price>/0/1}"></Input>
                    <Input value="{Price>/0/2}"></Input>
                    <!-- <Input value="{path: 'orders>/OrderDate', type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'dd/MM/yyyy' }}" /> -->
                    </items>
                </HBox>
                <HBox justifyContent="Center" width="100%" displayInline="true">
                <items>
                <Table id="detailTable" popinLayout="GridLarge" enableBusyIndicator="true">
                </Table>
                </items>
                </HBox>
            </u:expandedContent>
            <u:snappedContent>
            </u:snappedContent>

        </u:ObjectPageDynamicHeaderTitle>
    </u:ObjectPageDynamicHeaderContent>
    <content>
            <Table id="suppliersTable" items="{path : 'details>/'}" alternateRowColors="true">
            <columns>
                <Column minScreenWidth="Tablet" hAlign="Center" styleClass="gray">
                    <Text text="ID" />
                </Column>
                <Column minScreenWidth="Tablet" width="75%">
                    <Text text="Product Name" />
                </Column>
                <Column minScreenWidth="Tablet">
                    <Text text="Price" />
                </Column>
                <Column minScreenWidth="Tablet">
                    <Text text="Stock" />
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Navigation" press="onPress">
                    <cells>
                        <ObjectIdentifier text="{details>Product/ProductID}" />
                        <ObjectIdentifier text="{details>Product/ProductName}" />
                        <ObjectIdentifier text="{= ((${details>UnitPrice} * 100) / 100).toFixed(2) } EUR" />
                        <ObjectIdentifier text="{details>Product/UnitsInStock}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </content>
</Page>
</mvc:View>